  "testScenarios": {
    "createUserAndAuction": {
      "step1": {
        "description": "Create a new user",
        "endpoint": "POST /auth/signup",
        "payload": {
          "name": "Test User",
          "username": "testuser",
          "email": "test@example.com",
          "password": "TestPass123"
        }
      },
      "step2": {
        "description": "Login to get JWT token",
        "endpoint": "POST /auth/login",
        "payload": {
          "usernameOrEmail": "testuser",
          "password": "TestPass123"
        }
      },
      "step3": {
        "description": "Create an auction",
        "endpoint": "POST /auction/create",
        "headers": {
          "Authorization": "Bearer {JWT_TOKEN_FROM_STEP2}"
        },
        "payload": {
          "title": "Test Auction",
          "startTime": "2024-01-08T17:30:00.000Z",
          "endTime": "2024-01-08T18:30:00.000Z",
          "startingBid": 1000
        }
      },
      "step4": {
        "description": "Join auction room via WebSocket",
        "websocket": {
          "url": "ws://localhost:3000",
          "namespace": "/royalClassAuctionRoom",
          "auth": {
            "token": "{JWT_TOKEN_FROM_STEP2}"
          },
          "event": "join-room",
          "payload": {
            "auctionId": "{AUCTION_ID_FROM_STEP3}"
          }
        }
      }
    }
  }
